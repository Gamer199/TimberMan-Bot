from PIL import ImageGrab
import constant
import pyautogui
import threading


def startBot():
    threading.Timer(0.3, startBot).start()
    px = ImageGrab.grab().load()
    
    colors = constant.COLORS
    direction = "left"

    for y in range(675, 804, 6):
        for x in range(650, 688, 6):
            if px[x, y] in colors:
                direction = "right"

    pyautogui.press(direction)


startBot()